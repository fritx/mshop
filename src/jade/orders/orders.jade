ul.pure-g
  each order in orders
    li.pure-u-1.order-li
      .order-box
        include items
        .pure-g.order-desc
          .pure-u-2-3
            .cost-box
              span.trailing 实付款:
              span.price ￥#{order.cost.toFixed(1)}
          .pure-u-1-3
            .status-box
              span.status 谢谢惠顾
          if order.extra.message
            .pure-u-1
              .message-box
                span.trailing 留　言:
                span.message= order.extra.message
