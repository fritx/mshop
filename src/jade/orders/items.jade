each item in order.items
  .pure-g
    .pure-u-1-3
      .col-box
        a(href='detail.html?id=#{item.id}')
          .img-box.pull-center
            .square
              .square-inner
                .lazy-box.unloaded
                  img.lazy(src=transparent, data-original=item.image||false)
    .pure-u-2-3
      .col-box.desc-box
        .title= item.title
        div
          span.price ï¿¥#{item._price.toFixed(1)}
          i.fa.fa-times
          span= item.num
